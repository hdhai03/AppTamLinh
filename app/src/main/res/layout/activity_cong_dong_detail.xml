<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    tools:context=".CongDongFeature.CongDongDetailActivity">

    <Button
        android:id="@+id/btnBack_CongDong"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lost_type"
        android:text="Cộng Đồng"
        android:textColor="@color/P1"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lost_type"
        android:text="TAROT"
        android:textColor="@color/P1"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="650dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/americana_b"
                android:gravity="start"
                android:text="2 giờ trước"
                android:textColor="@color/W1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/americana_eb"
                android:gravity="start"
                android:text="Hoàng Đức Hải"
                android:textColor="@color/W1"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtGioiTinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/americana_b"
                android:gravity="start"
                android:text="Giới tính: Nam"
                android:textColor="@color/W1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtNgaySinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/americana_b"
                android:gravity="start"
                android:text="Ngày sinh: 29/12/2003"
                android:textColor="@color/W1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtCauHoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/americana_eb"
                android:gravity="start"
                android:text="Tôi sẽ có người yêu chứ, ny tôi thế nào?"
                android:textColor="@color/W1"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txtChiTiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/americana_b"
                android:gravity="start"
                android:paddingRight="32dp"
                android:text="Tôi chưa từng có mối tình nào. TÍnh cách không muốn mở lòng cho lắm, cũng không chủ động tiếp xúc, ..........."
                android:textColor="@color/W1"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@id/linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="70dp"
                    android:layout_height="111dp"
                    android:layout_marginRight="20dp"
                    app:srcCompat="@drawable/png_tarot_card_back" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="70dp"
                    android:layout_height="111dp"
                    android:layout_marginRight="20dp"
                    app:srcCompat="@drawable/png_tarot_card_back" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="70dp"
                    android:layout_height="111dp"
                    android:layout_marginRight="20dp"
                    app:srcCompat="@drawable/png_tarot_card_back" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="70dp"
                    android:layout_height="111dp"
                    android:layout_marginRight="20dp"
                    app:srcCompat="@drawable/png_tarot_card_back" />
            </LinearLayout>

            <View
                android:id="@+id/lineSeparator"
                android:layout_width="390dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#FFFFFF"
                android:layout_gravity="center" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mRecyclerView_CMT"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/edtCMT"
            android:hint="Bình luận"
            android:fontFamily="@font/americana_b"
            android:textColorHint="@color/W1"
            android:textSize="12dp"
            android:paddingLeft="12dp"
            android:textColor="@color/W1"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_input" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_send" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
