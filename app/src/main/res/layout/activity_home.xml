<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lost_type"
        android:text="APP"
        android:textColor="@color/P1"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lost_type"
        android:text="Tâm linh"
        android:textColor="@color/P1"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView1" />

    <Button
        android:id="@+id/btnEnergy_Home"
        android:layout_width="64dp"
        android:layout_height="25dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_energy"
        android:fontFamily="@font/americana_b"
        android:paddingLeft="10dp"
        android:textColor="@color/W1"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnProfile_Home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:background="@drawable/png_ava"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.894"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnTarot_Home"
                android:layout_width="160dp"
                android:layout_height="166dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_tarot" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnChiemTinh_Home"
                    android:layout_width="199dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/btn_chiem_tinh" />

                <Button
                    android:id="@+id/btnThanSH_Home"
                    android:layout_width="199dp"
                    android:layout_height="75dp"
                    android:background="@drawable/btn_than_sh" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnCongDong_Home"
            android:layout_width="380dp"
            android:layout_height="77dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_cong_dong" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lost_type"
        android:text="Thông điệp mỗi ngày"
        android:textColor="@color/W1"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/americana_b"
        android:text="Khởi đầu ngày mới với lá bài mang thông điệp riêng."
        android:textColor="@color/W1"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNumber" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintVertical_bias="0.029">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnCard1"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/png_tarot_card_back" />

            <Button
                android:id="@+id/btnCard2"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/png_tarot_card_back" />

            <Button
                android:id="@+id/btnCard3"

                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/png_tarot_card_back" />

            <Button
                android:id="@+id/btnCard4"

                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/png_tarot_card_back" />

            <Button
                android:id="@+id/btnCard5"

                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/png_tarot_card_back" />

            <Button
                android:id="@+id/btnCard6"

                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/png_tarot_card_back" />

            <Button
                android:id="@+id/btnCard7"

                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/png_tarot_card_back" />

            <Button
                android:id="@+id/btnCard8"

                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/png_tarot_card_back" />

            <Button
                android:id="@+id/btnCard9"

                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/png_tarot_card_back" />

            <Button
                android:id="@+id/btnCard10"

                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/png_tarot_card_back" />

            <Button
                android:id="@+id/btnCard11"

                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/png_tarot_card_back" />

            <Button
                android:id="@+id/btnCard12"

                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/png_tarot_card_back" />

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lost_type"
        android:text="Nổi bật"
        android:textColor="@color/W1"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <Button
        android:id="@+id/btnTarot2_Home"
        android:layout_width="380dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_tarot_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/btnChiemTinh2_Home"
        android:layout_width="380dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_chiem_tinh_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTarot2_Home" />

    <Button
        android:id="@+id/btnThanSH2_Home"
        android:layout_width="380dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_than_sh_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChiemTinh2_Home" />

</androidx.constraintlayout.widget.ConstraintLayout>