<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/B2"
        app:cardCornerRadius="8dp"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dp">

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/americana_b"
                android:text="2 giờ trước"
                android:textColor="@color/W1"
                android:textSize="10sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/americana_b"
                android:text="Tôi sẽ có người yêu chứ, ny tôi thế nào?"
                android:textColor="@color/W1"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/txtTime"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="70dp"
                android:layout_height="111dp"
                app:srcCompat="@drawable/png_tarot_card_back"
                app:layout_constraintTop_toBottomOf="@id/textView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="70dp"
                android:layout_height="111dp"
                app:srcCompat="@drawable/png_tarot_card_back"
                app:layout_constraintTop_toTopOf="@id/imageView1"
                app:layout_constraintStart_toEndOf="@id/imageView1"
                android:layout_marginStart="16dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="70dp"
                android:layout_height="111dp"
                app:srcCompat="@drawable/png_tarot_card_back"
                app:layout_constraintTop_toTopOf="@id/imageView1"
                app:layout_constraintStart_toEndOf="@id/imageView2"
                android:layout_marginStart="16dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="70dp"
                android:layout_height="111dp"
                app:srcCompat="@drawable/png_tarot_card_back"
                app:layout_constraintTop_toTopOf="@id/imageView1"
                app:layout_constraintStart_toEndOf="@id/imageView3"
                android:layout_marginStart="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
