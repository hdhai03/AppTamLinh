<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".RegisterFeature.RegisterFragment.RegisterFragment1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnView"
            android:layout_width="160dp"
            android:layout_height="44dp"
            android:background="@drawable/btn_stroke"
            android:backgroundTint="@null"
            android:fontFamily="@font/americana_eb"
            android:text="Bước 1/4"
            android:textAllCaps="false"
            android:textColor="@color/W1"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/lost_type"
            android:text="Email"
            android:textColor="@color/W1"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="390dp"
            android:layout_height="58dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="@font/americana_b"
            android:hint="Nhập tên đăng nhập ở đây"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="@color/W1"
            android:textColorHint="@color/W1"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lost_type"
            android:text="Mật khẩu"
            android:layout_marginTop="15dp"
            android:textColor="@color/W1"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtMatKhau"
            android:layout_width="390dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="@font/americana_b"
            android:hint="Nhập mật khẩu ở đây"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColor="@color/W1"
            android:textColorHint="@color/W1"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="225dp"
            android:layout_height="52dp"
            android:background="@drawable/btn_fill"
            android:backgroundTint="@null"
            android:fontFamily="@font/americana_eb"
            android:text="Tiếp tục"
            android:textAllCaps="false"
            android:textColor="@color/W1"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_back"
            android:backgroundTint="@null"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.944" />
    </LinearLayout>

</FrameLayout>